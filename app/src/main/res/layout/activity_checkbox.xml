<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.doggyquiz.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        style="@style/LayoutMargins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/checkboxImage"
            style="@style/Images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/question_three" />

        <TextView
            android:id="@+id/checkbox_question_textView"
            style="@style/Questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questionThree" />

        <LinearLayout
            style="@style/SelectionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkboxButtonOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questionThreeAnswerOne" />

            <CheckBox
                android:id="@+id/checkboxButtonTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questionThreeAnswerTwo" />

            <CheckBox
                android:id="@+id/checkboxButtonThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questionThreeAnswerThree" />

            <CheckBox
                android:id="@+id/checkboxButtonFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questionThreeAnswerFour" />

        </LinearLayout>

        <Button
            android:id="@+id/nextButtonCheckbox"
            style="@style/Buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submitButton" />

    </LinearLayout>
</ScrollView>