<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LayoutMargins"
    android:orientation="vertical"
    tools:context="com.example.android.doggyquiz.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textboxImage"
        style="@style/Images"
        android:src="@drawable/question_five"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textbox_question_textView"
        style="@style/Questions"
        android:text="@string/questionFive"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        style="@style/SelectionButtons"
        android:id="@+id/editText"
        android:hint="@string/textbox_hint"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Buttons"
        android:text="@string/nextButton"
        android:id="@+id/nextButtonText" />

</LinearLayout>